<% @page_title = "Admins" %>

<div class="admins index">
    <h2>Admins</h2>
        <%=  %>

        <%= link_to(image_tag('plus_sign.png', :size=>'11x11', :alt => '+') + " Add New Admin", {:action => 'new'}, :class => 'action new') %>

    <table class="listing" summary="Admins">
        <tr class="header">
            <th>ID</th>
            <th>Username</th>
            <th>Password</th>
            <th>Actions</th>
        </tr>
        <% @admins.each do |admin| %>
        <tr>
            <td><%= admin.id %></td>
            <td><%= admin.username %></td>
            <td><%= admin.password %></td>
            <td class="actions">
                <%= link_to("Show", {:action => 'show' , :id => admin.id},  :class => 'action show') %>
                <%= link_to("Edit",{:action => 'edit' , :id => admin.id}, :class => 'action edit') %>
                <%= link_to("Delete", {:action => 'delete', :id => admin.id}, :class => 'action delete') %>
            </td>
        </tr>
        <% end %>
    </table>
</div>
